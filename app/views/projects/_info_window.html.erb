<div class="map-pop-project-card">
  <%# Display project title as a link %>
  <h5>
    <%= link_to project.title, project_path(project), class: "card-title" %>
  </h5>

  <%# Progress bar showing the percentage of funding achieved %>
  <div class="progress" role="progressbar" aria-label="Funding progress" aria-valuenow="<%= (project.total / project.target.to_f * 100).clamp(0, 100).round %>" aria-valuemin="0" aria-valuemax="100">
    <div
      class="progress-bar"
      style="width: <%= [(project.total / project.target.to_f * 100).round, 100].min %>%;">
    </div>
  </div>

  <%# Total raised and funding target %>
  <p class="total-raise">
    <%= humanized_money_with_symbol(project.total / 100.00) %> raised out of
    Â£<%= number_to_human(project.target / 100, format: '%n%u', units: { thousand: 'K' }) %>
  </p>

  <hr>

  <%# Region and address %>
  <p class="project-location">
    <%= project.region %>: <%= project.address %>
  </p>

  <%# Display project categories %>
  <button class="pill">
    <%= project.display_categories %>
  </button>
</div>
