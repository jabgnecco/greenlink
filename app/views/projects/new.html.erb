<div class="project-new-container">
  <h5 class="d-flex justify-content-center tagline">Start your own project and build the world you want to live in</h3>
  <%= simple_form_for(@project) do |f| %>
    <p class="mt-4 mb-2"><strong>Add your project title:</strong></p>
    <%= f.input :title, label: false %>
    <p class="mb-2"><strong>Tell us about your project:</strong></p>
    <%= f.input :description, label: false %>
    <p class="mb-2"><strong>What energy does your project provide?</strong></p>
    <%= f.simple_fields_for :categories do |c| %>
      <%= c.input :name, as: :select, collection: Category::ENERGY_TYPES, label: false %>
    <% end %>
    <p class="mb-2"><strong>Add your fund-raising target:</strong></p>
    <%= f.input :target, label: false %>
    <p class="mb-2"><strong>Add your project's location:</strong></p>
    <p class="mb-1">Address:</p>
    <%= f.input :address, label: false %>
    <p class="mb-1">Region:</p>
    <%= f.input :region, as: :select, collection: Project::CONTINENTS, label: false %>
    <p class="mb-2"><strong>Who audited your project?</strong></p>
    <%= f.input :auditor, label: false %>
    <p class="mb-2"><strong>Choose the fund-raising closing date for your project:</strong></p>
    <%= f.input :closing_date, label: false,
                      html5: true %>
    <p class="mb-2"><strong>Add a photo of your project (optional):</strong></p>
    <%= f.input :photo, label: false, as: :file %>
    <%= f.submit "Post", class: "button-small-green" %>
  <% end %>
</div>
