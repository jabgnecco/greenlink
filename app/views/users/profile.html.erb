<div class="mx-5">
  <h3 class="my-4 fw-bold">Your Donations:</h3>
  <% @donations.each do | donation | %>
    <div>
      <%= link_to project_path(donation.project), style: "flex: 1;" do %>

        <div class="mx-2 my-3 p-3 thin-card">
          <div class="d-flex align-items-center justify-content-between">
            <h3 class="fs-5 fw-bold"><%= donation.project.title %></h3>
            <p class="px-2">Â£<%= (donation.amount.to_f / 100) %></p>
          </div>

          <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar bg-success d-flex justify-content-start" style="width: <%=( (donation.project.total / donation.project.target.to_f) * 100) > 100 ? 100 : (donation.project.total / (donation.project.target.to_f) * 100)  %>%;"></div>
          </div>

        </div>

      <% end %>
    </div>
  <% end%>

  <h3 class="my-4 fw-bold">Your Projects:</h3>
  <div class="profile-cards">
      <% @projects.each do |project| %>
        <div style="position: relative;" class="card w-100">
          <%= link_to project_path(project) do %>
            <div>
              <%# <% image = project.photo.attached? ? cl_image_tag project.photo.key, height: 300, class: "card-image", crop: :fill : image_tag "logo.png", alt: "Green Link Logo", class: "logo-icon me-2" %>
              <%# <%= image %>
              <% if project.photo.attached? %>
                <%= cl_image_tag project.photo.key, height: 300, class: "card-image", crop: :fill %>
              <% else %>
                <%= image_tag "logo.png", alt: "Green Link Logo", class: "logo-icon me-2" %>
              <% end %>
            </div>
            <div class="card-body">
              <h5 class="card-title custom-padding d-flex justify-content-start">
                <p class="card-title"><%= project.title %></p>
              </h5>
              <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar bg-success d-flex justify-content-start" style="width: <%=( (project.total / project.target.to_f) * 100) > 100 ? 100 : (project.total / project.target.to_f) * 100  %>%;"></div>
              </div>
              <p class="total-raise d-flex justify-content-start mt-3">
                <strong><%= humanized_money_with_symbol (project.total / 100.00) %> raised </strong>
              </p>
              <button class="pill"><%= project.display_categories %></button>
              <button class="pill"><%= project.region %></button>
            </div>
          <% end %>
          <%= link_to "Delete", project_path(project), class: "pill-small-green", style: "position: absolute; right: 10px; bottom: 10px;",
            data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?" } %>
        </div>
      <% end %>
    </div>
</div>


<style>
a {
  text-decoration: none;
  color: black;
}
</style>
